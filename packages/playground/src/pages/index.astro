---
import PlaygroundLayout from '../layouts/PlaygroundLayout.astro';

import {
	Stack,
	ProductGrid,
	MinimalistPageLayout,
	MinimalistHero,
	MinimalistProductCard,
	MinimalistBanner,
	MinimalistStorefront
} from '@lloydjatkinson/astro-snipcart-design-system/astro';

// import {
