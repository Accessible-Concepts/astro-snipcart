---
import Stack from './Stack.astro';
import ProductGrid from './ProductGrid.astro';

import MinimalistHeader from './MinimalistHeader.astro';
import MinimalistHero from './MinimalistHero.astro';
import MinimalistBanner from './MinimalistBanner.astro';
---

<main class="container mx-auto">
    <MinimalistBanner message="Here's a banner you can use to alert customers to new deals!" />
    <MinimalistHeader />
    <div>
        <Stack>
            <section>
                <MinimalistHero
                    heading="The here and now"
                    subHeading="For the creative and curious - these are the products that you're looking for." />
            </section>

            <section>
                <ProductGrid>
                    <div>
                        Product here
                    </div>
                    <div>
                        Product here
                    </div>
                    <div>
                        Product here
                    </div>
                    <div>
                        Product here
                    </div>
                    <div>
                        Product here
                    </div>
                </ProductGrid>
            </section>     
        </Stack>
        <footer class="flex flex-col gap-1 mb-4 mt-52 text-sm font-thin text-center text-gray-500">
            <p>Page last built { new Date().toLocaleDateString('en-GB') }</p>
            <p>
                <a href="https://github.com/lloydjatkinson/astro-snipcart" target="_blank">
                    Astro Snipcart by @lloydjatkinson
                </a>
            </p>
        </footer>
    </div>
</main>