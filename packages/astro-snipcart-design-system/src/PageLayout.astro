---
import Stack from './Stack.astro';
import ProductGrid from './ProductGrid.astro';

import Header from './Header.astro';
import Hero from './Hero.astro';
import Banner from './Banner.astro';
import ProductCard from './ProductCard.astro';
import { ProductCard } from './types';

export interface Props {
    readonly title: string;
    readonly description: string;
    readonly banner?: string;
}
const { title, description, banner } = Astro.props as Props;

// generate 10 random product cards


const productCards: ProductCard[] = [];
for (let i = 0; i < 10; i++) {
  productCards.push({
    id: `${i}`,
    name: `Product ${i}`,
    description: `Product ${i} description`,
    price: Math.floor(Math.random() * 100),
    image: `https://picsum.photos/400/600?image=${Math.floor(Math.random() * 100)}`,
    currencySymbol: 'Â£',
  });
};
---
<div class="container mx-auto px-3 sm:px-0">
    <Banner message={ banner } />
    <Header />
    <slot />
    <footer class="bg-gray-800 h-40 flex flex-col gap-1 mb-4 mt-52 font-thin text-center text-white">
        <p>Page last built { new Date().toLocaleDateString('en-GB') }</p>
        <p>
            <a href="https://github.com/lloydjatkinson/astro-snipcart" target="_blank">
                Astro Snipcart by @lloydjatkinson
            </a>
        </p>
    </footer>
</div>