---
import { SnipcartSetup } from '@lloydjatkinson/astro-snipcart/astro';

import Stack from './Stack.astro';
import Banner from './Banner.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';

export interface Props {
    readonly title: string;
    readonly description?: string;
    readonly image?: string;
    readonly banner?: string;
    readonly storeName?: string;
    readonly logoUrl?: string;
    readonly useDefaultLogo?: 'hexagon' | 'triangle' | 'box' | 'plant' | 'shirt';
}

const { title, description, image, banner, storeName, logoUrl, useDefaultLogo } = Astro.props as Props;

const permalink = Astro.canonicalURL;

const imagePath = `${ Astro.site.origin }${ image }`;
---
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="title" content={ title } />
        <meta name="description" content={ description } />

        <meta property="og:url" content={ permalink } />
        <meta property="og:title" content={ title } />
        <meta property="og:description" content={ description } />
        {
            imagePath &&
            <meta property="og:image" content={ imagePath } />
        }
        <meta property="og:type" content="product">
        
        <title>{ title }</title>
        <slot name="head" />
        <SnipcartSetup />
    </head>
    <body>
        <div class="container mx-auto max-w-7xl px-3 sm:px-6">
            <Banner message={ banner } />
            <Header
                storeName={ storeName }
                logoUrl={ logoUrl }
                useDefaultLogo={ useDefaultLogo } />
            <main>
                <slot />
            </main>
            <Footer
                storeName={ storeName }
                links={[
                    { to: '/products', label: 'Products' },
                    { to: '/sale', label: 'Sale' },
                    { to: '/about', label: 'About' },
                    { to: '/contact', label: 'Contact' },
                    { to: '/jobs', label: 'Jobs' },
                ]}
                />
        </div>
    </body>
</html>